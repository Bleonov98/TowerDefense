#version 400 core

layout(location = 0) in vec3 pos;
layout(location = 1) in vec2 tex;
layout(location = 2) in vec3 col;

uniform mat4 projection;
uniform mat4 view;
uniform mat4 model;

out vec2 TexCoords;
out vec3 Colours;

void main()
{
	gl_Position = projection * view * model * vec4(pos, 1.0);

	TexCoords = tex;
    Colours = col;
}