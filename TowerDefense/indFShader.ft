#version 400 core
out vec4 FragColour;

in vec2 TexCoords;

uniform bool menu;
uniform bool isImage;
uniform sampler2D image;
uniform vec3 spriteColour;

void main()
{
    menu ? spriteColour *= 0.4f : spriteColour *= 0.9f;

    if (isImage) FragColour = vec4(spriteColour * 0.4f, 1.0) * texture(image, TexCoords);
    else FragColour = vec4(spriteColour, 1.0f);
}