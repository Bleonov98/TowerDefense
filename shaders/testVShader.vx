#version 400 core

layout(location = 0) in vec3 vPos;
layout(location = 1) in vec3 vCol;
layout(location = 2) in mat4 instanceMat;

uniform mat4 projection;
uniform mat4 view;

out vec3 cellColour;

void main()
{
	gl_Position = projection * view * instanceMat * vec4(vPos, 1.0);
	cellColour = vCol;
}